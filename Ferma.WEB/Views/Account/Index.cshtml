<!-- Button trigger modal -->
@if (!User.Identity.IsAuthenticated)
{
@Html.ActionLink("Регистрация", "Register", "Account", new { @class = "btn btn-primary openModel" })
@Html.ActionLink("Вход", "Login", "Account", new { @class = "btn btn-primary openModel" })
}
else
{
    <li class="nav-item">
        <a>
            <h1>Привет @User.Identity.Name</h1>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link">@Html.ActionLink("Выход", "Logout", "Account")</a>
    </li>
}
<!-- Modal -->
